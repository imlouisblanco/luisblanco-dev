---
import Image from "astro/components/Image.astro"

interface Props {
	title: string;
	body: string;
	href: string;
	tech: string;
	image?: string;
}

const { href, title, body, tech, image="" } = Astro.props;
---

<li class="link-card">
	<a target="_blank" href={href}>
		<Image src={image} alt={title} width={300} height={200} loading="eager" title={title} class="w-full object-contain"/>
		<h2 class="my-4 font-bold">
			{title}
		</h2>
		<p class="text-sm">
			{body}
		</p>
		<p class="text-sm font-mono mt-4">
			Desarrollado con: {tech}
		</p>
	</a>
</li>
<style>
	.link-card {
		list-style: none;
		display: flex;
		padding: 1px;
		background-color: #23262d;
		background-image: none;
		background-size: 400%;
		border-radius: 7px;
		background-position: 100%;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
	}
	.link-card > a {
		width: 100%;
		text-decoration: none;
		line-height: 1.4;
		padding: calc(1.5rem - 1px);
		border-radius: 8px;
		color: white;
		background-color: #23262d;
		opacity: 0.8;
	}
	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
	}
	.link-card:is(:hover, :focus-within) {
		background-position: 0;
		background-image: var(--accent-gradient);
	}
	.link-card:is(:hover, :focus-within) h2 {
		color: rgb(var(--accent-light));
	}
</style>
